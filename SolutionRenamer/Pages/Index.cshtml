@page
@model IndexModel
@{
}

<div class="row">
    <div class="col-lg-8 col-md-12 m-auto">
        <div class="text-center">
            <h1 class="display-4">Solution Renamer</h1>
            <p>This tool can rename an entire solution and package it conveniently for your next project.</p>
            <p><strong>Source must be a .zip file</strong></p>


            <form method="post" role="form">
                <div class="form-group">
                    <label asp-for="URL">URL to the source</label>
                    <input asp-for="URL" type="text" class="form-control" placeholder="Enter URL">
                    <small id="emailHelp" class="form-text text-muted">This must be a publicly available archive</small>
                </div>


                <div class="form-row">
                    <div class="form-group col-12 col-sm-6">
                        <label asp-for="Keyword">Keyword</label>
                        <input asp-for="Keyword" class="form-control" placeholder="Enter keyword">
                        <small id="emailHelp" class="form-text text-muted">The keyword to replace in all files found within the archive</small>
                    </div>

                    <div class="form-group col-12 col-sm-6">
                        <label asp-for="ProjectName">Project name</label>
                        <input asp-for="ProjectName" class="form-control" placeholder="Enter project name">
                        <small id="emailHelp" class="form-text text-muted">The name of your project (no spaces, alphanumeric only)</small>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mt-4">Create Project</button>
            </form>

        </div>
    </div>
</div>
